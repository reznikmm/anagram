with "matreshka/league";

project Gela_Common is

   Build := external ("GELA_BUILD", "../build");
   for Source_Dirs use ("../src/common");
   for Object_Dir use Build & "/common";

   Default_Ada_Switches :=
     ("-gnat12", "-gnatW8", "-g");

   Check_Ada_Switches := Default_Ada_Switches & ("-gnatwea", "-gnaty");

   package Compiler is
      for Default_Switches ("ada") use Check_Ada_Switches;
   end Compiler;

end Gela_Common;
